<p id="notice"><%= notice %></p>
<% @brewery.beers.to_a %>
<h2>
  <%= @brewery.name %>
</h2>

<p>
  <em>Established in </em>
  <%= @brewery.year %>
</p>

<p>
  <strong>Amount of beers:</strong>
  <%= @brewery.beers.count %>
</p>

<p>
  <% @brewery.beers.each do |beer| %>
    <%= link_to beer.name, beer%>
  <% end %>
</p>

<%= link_to 'Edit', edit_brewery_path(@brewery) %> |
<%= link_to 'Back', breweries_path %>
