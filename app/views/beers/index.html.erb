

<h1>Beers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.name %></td>
        <td><%= beer.style %></td>
        <% @brewery = Brewery.find(beer.brewery_id) %>
        <td><%= link_to @brewery.name, @brewery %></td>
        <td><%= link_to 'Show', beer, class:'btn btn-primary' %></td>
        <% if current_user %>
          <td><%= link_to 'Edit', edit_beer_path(beer), class:'btn btn-primary' %></td>
          <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beer', new_beer_path, class:'btn btn-primary' if current_user %><br>
<%= link_to 'List of breweries', breweries_path%>
