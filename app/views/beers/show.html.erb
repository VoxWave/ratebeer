<%cache @beer do %>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= 
    brewery = Brewery.find @beer.brewery_id 
    brewery.name
  %>
</p>

<p>
  <% if @beer.ratings.empty? %>
  beer has not yet been rated!
  <% else %>
  Has <%= pluralize(@beer.ratings.length, 'rating') %>, average: <%= round(@beer.average_rating) %>
  <% end %>
</p>

<% end %>

<%= link_to 'Edit', edit_beer_path(@beer) %> |
<%= link_to 'Back', beers_path %>
